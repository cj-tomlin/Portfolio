---
import ThemeToggle from "@/components/ThemeToggle.astro";
import SectionDivider from "@/components/SectionDivider.astro";
import Button from "@/components/starwind/button";
---

<header class="flex flex-col">
    <div class="flex gap-4 justify-between items-center p-4">
        <div class="flex gap-4 items-center">
            <ThemeToggle />
            <slot name="nav" />
            <!-- Future components can be added here -->
        </div>
        <div class="flex gap-4 items-center">
            <Button
                variant="outline"
                class="font-bold uppercase contact-outline">Contact</Button
            >
        </div>
    </div>
    <div>
        <SectionDivider />

        <h1
            class="p-2 w-full text-7xl font-bold tracking-tighter text-center uppercase text-foreground"
            style="font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif; transform: scaleX(1.5); display: inline-block;"
        >
            Chris Tomlin
        </h1>
        <SectionDivider />
    </div>
</header>
