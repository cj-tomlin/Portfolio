<div class="flex items-center w-full text-gray-300 dark:text-gray-700">
    <div class="relative w-3 h-3 cross"></div>
    <div class="flex-1 h-px bg-gray-300 dark:bg-gray-700 mx-4"></div>
    <div class="relative w-3 h-3 cross"></div>
</div>

<style>
    .cross::before,
    .cross::after {
        content: "";
        position: absolute;
        background: currentColor;
    }
    .cross::before {
        width: 100%;
        height: 1px;
        top: 50%;
        left: 0;
        transform: translateY(-50%);
    }
    .cross::after {
        height: 100%;
        width: 1px;
        left: 50%;
        top: 0;
        transform: translateX(-50%);
    }
</style>
