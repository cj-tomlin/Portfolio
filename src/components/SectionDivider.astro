<div
    class="px-4 flex items-center w-full text-[var(--border)] dark:text-[var(--border)]"
>
    <div class="relative w-4 h-4 cross"></div>
    <div class="flex-1 h-0.5 bg-[var(--border)] dark:bg-[var(--border)] mx-4">
    </div>
    <div class="relative w-4 h-4 cross"></div>
</div>

<style>
    .cross::before,
    .cross::after {
        content: "";
        position: absolute;
        background: currentColor;
    }
    .cross::before {
        width: 100%;
        height: 2px;
        top: 50%;
        left: 0;
        transform: translateY(-50%);
    }
    .cross::after {
        height: 100%;
        width: 2px;
        left: 50%;
        top: 0;
        transform: translateX(-50%);
    }
</style>
