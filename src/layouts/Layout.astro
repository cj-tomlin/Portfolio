---
import "@/styles/starwind.css";
import Header from "@/components/Header.astro";
import SectionDivider from "@/components/SectionDivider.astro";
import Footer from "@/components/Footer.astro";
const { pageTitle } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
	</head>
	<body
		class="flex overflow-x-hidden flex-col p-0 m-0 w-screen h-screen max-w-[1440px] mx-auto px-4"
	>
		<Header class="flex-shrink-0" style="flex-shrink:0;">
			<slot name="nav" slot="nav" />
		</Header>
		<main>
			<slot />
		</main>
		<SectionDivider class="flex-shrink-0" style="flex-shrink:0;" />
		<Footer class="flex-shrink-0" style="flex-shrink:0;" />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
