---
import "@/styles/starwind.css";
import Header from "@/components/Header.astro";
import SectionDivider from "@/components/SectionDivider.astro";
import Footer from "@/components/Footer.astro";
const { pageTitle } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
	</head>
	<body class="w-screen overflow-x-hidden m-0 p-0 flex flex-col h-screen">
		<Header class="flex-shrink-0" style="flex-shrink:0;">
			<slot name="nav" slot="nav" />
		</Header>
		<main class="flex-1 overflow-hidden flex">
			<slot />
		</main>
		<SectionDivider class="flex-shrink-0" style="flex-shrink:0;" />
		<Footer class="flex-shrink-0" style="flex-shrink:0;" />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
